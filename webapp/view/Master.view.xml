<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:semantic="sap.m.semantic"
	controllerName="so.mng.controller.Master">
	<semantic:MasterPage id="page" title="{masterView>/title}" navButtonPress="onNavBack" showNavButton="true">
		<semantic:subHeader>
			<Bar id="headerBar">
				<contentMiddle>
					<SearchField id="searchField" showRefreshButton="{= !${device>/support/touch} }" tooltip="{i18n>masterSearchTooltip}" width="100%"
						search="onSearch"></SearchField>
				</contentMiddle>
			</Bar>
		</semantic:subHeader>
		<semantic:content>
			<PullToRefresh id="pullToRefresh" visible="{device>/support/touch}" refresh="onRefresh"/>
			<!-- For client side filtering add this to the items attribute:  parameters: {operationMode: 'Client'}}" -->
			<List id="list"
				items="{ path: '/softwareSet', sorter: { path: 'SoftwareName', descending: false }, groupHeaderFactory: '.createGroupHeader' }"
				busyIndicatorDelay="{masterView>/delay}" noDataText="{masterView>/noDataText}"
				mode="{= ${device>/system/phone} ? 'None' : 'SingleSelectMaster'}" growing="true" growingScrollToLoad="true"
				updateFinished="onUpdateFinished" selectionChange="onSelectionChange">
				<infoToolbar>
					<Toolbar active="true" id="filterBar" visible="{masterView>/isFilterBarVisible}" press="onOpenViewSettings">
						<Title id="filterBarLabel" text="{masterView>/filterBarLabel}"/>
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem type="{= ${device>/system/phone} ? 'Active' : 'Inactive'}" press="onSelectionChange" title="{SoftwareName}">
						<firstStatus>
							<!-- <ObjectStatus text="{Status}" id="__status0" state="{ path: 'SatateColor' ,    formatter: 'resourcemanagement.util.Formatter.statusState'}"/> -->
							<ObjectStatus text="{Status}" id="__status0" state="{ path: 'SatateColor' , formatter: 'formatter.statusState'}"/>
						</firstStatus>
						<attributes>
							<ObjectAttribute active="false" id="__attribute0" text="{softwareID}"/>
							<ObjectAttribute text="{Customer}" active="false" id="__attribute1" title="Customer"/>
						</attributes>
						<secondStatus>
							<ObjectStatus text="{IncidentSt}" id="__status1" state="{ path: 'IncidentStCo' , formatter: 'formatter.statusState'}"/>
						</secondStatus>
					</ObjectListItem>
				</items>
			</List>
		</semantic:content>
		<semantic:customFooterContent>
			<Button width="100px" id="__button0" icon="sap-icon://add" press="onAddPress"/>
		</semantic:customFooterContent>
		<semantic:filter>
			<semantic:FilterSelect tooltip="Filter" id="__select0" />
		</semantic:filter>
		<semantic:sort>
			<semantic:SortAction tooltip="Sort" id="__action0" press="onSort"/>
		</semantic:sort>
	</semantic:MasterPage>
</mvc:View>